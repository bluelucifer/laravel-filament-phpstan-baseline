# Docker Development Environment Configuration

# PHP Version (8.1, 8.2, 8.3)
PHP_VERSION=8.2

# Composer Configuration
COMPOSER_CACHE_DIR=/home/developer/.composer/cache
COMPOSER_MEMORY_LIMIT=2G

# PHPStan Configuration
PHPSTAN_LEVEL=8
PHPSTAN_MEMORY_LIMIT=1G

# Testing Configuration
APP_ENV=testing
PHPUNIT_MEMORY_LIMIT=512M

# Laravel Test App Configuration (for integration testing)
LARAVEL_VERSION=11
LARAVEL_APP_NAME="PHPStan Baseline Test"
LARAVEL_APP_ENV=testing
LARAVEL_APP_DEBUG=true

# Filament Test Configuration
FILAMENT_VERSION=3

# Development Tools
XDEBUG_MODE=off
XDEBUG_START_WITH_REQUEST=trigger

# Documentation Server
DOCS_PORT=8080

# Git Configuration (for commits inside container)
GIT_USER_NAME="Developer"
GIT_USER_EMAIL="developer@localhost"